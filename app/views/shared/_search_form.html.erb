<%= form_tag pages_path, :method => 'get' do %>  
  <p> 
    <%= label_tag "Comune" %><br />
    <%= text_field :post, :town, :size => 15 %><br />            
    <%= label_tag "Provincia" %><br />
    <%= text_field :post, :province, :size => 15 %><br />
    <%= label_tag "Contratto" %><br />
    <%= collection_select(:post, :TypeOfContract_id, TypeOfContract.all, :id, :name )%><br />
    <%= label_tag "Tipo casa" %><br />
    <%= collection_select(:post, :TypeOfHouse_id, TypeOfHouse.all, :id, :name )%><br />
    <%= label_tag "Metratura minima" %><br />
    <%= text_field :post, :minimum_sqm, :size => 15 %><br />
    <%= label_tag "Metratura massima" %><br />
    <%= text_field :post, :maximun_sqm, :size => 15 %><br />  
    <%= label_tag "Prezzo minimo" %><br />
    <%= text_field :post, :minimum_price, :size => 15 %><br />
    <%= label_tag "Prezzo massimo" %><br />
    <%= text_field :post, :maximun_price, :size => 15 %><br />  
    <%= submit_tag "Cerca", :name => nil %>  
  </p>  
<% end %>    