<h1>Editing <%=  @user.name %></h1>

<%= form_for([:admin, @user]) do |f| %>
  <div class="field">
    <%= f.label :name, "Nome e cognome:" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, "E-mail:" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :enabled, "Profilo abilitato:" %><br />
    <%= f.check_box :enabled, :disabled => "disabled" %>
  </div>
  <div class="field">
    <%= f.label :admin, "Amministratore:" %><br />
    <%= f.check_box :admin, :disabled => "disabled" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


