<h2>Nuovo tipo di contratto</h2>
<%= form_for @type_of_contract, :url => url_for(:controller => 'admin/settings', :action => 'save_contract'), :validate => true do |f| %>
<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<div class="action">
  <%= f.submit "Invia" %>
</div>
<% end %>
