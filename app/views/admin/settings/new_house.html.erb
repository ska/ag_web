<h2>Nuova tipologia di casa</h2>
<%= form_for @type_of_house, :url => url_for(:controller => 'admin/settings', :action => 'save_house'), :validate => true do |f| %>  
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="action">
    <%= f.submit "Invia" %>
  </div>
<% end %>
