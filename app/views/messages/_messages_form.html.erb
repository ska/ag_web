<%= form_for @message do |f| %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :object %><br />
  <%= f.text_field :object %>
</div>
<div class="field">
  <%= f.label :text %><br />
  <%= f.text_area :text %>
</div>
<div class="field">
  <%= f.hidden_field :house_id, :value => @house.id %>
</div>

<div class="action">
  <%= f.submit "Invia" %>
</div>
<% end %>