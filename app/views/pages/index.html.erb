<% if @houses.empty? %>
<br /><br />
<h2>Nessuna casa trovata con questi parametri</h2>
<% else %>
<table>
  <tr><td colspan="2" style="text-align: center;"><%= will_paginate @houses, :previous_label => "<< Indietro", :next_label => "Avanti >>" %></td></tr>
  <% @houses.each do |house| %>
  <tr class="<%= cycle("even", "odd") %>">
    <td colspan="2"><b><%= house.titolo %></b></td>
  </tr>
  <tr class="<%= cycle("even", "odd") %>">
    <td style="width: 140px; height: 105px;">
      <%= image_tag house.images.first.image_url(:thumb).to_s unless house.images.first.nil? %> 
      <%= casa_default if house.images.first.nil? %> 
    </td>
    <td>
      <div class="descrizione"><%= house.descrizione %></div>              
    </td>
  </tr>
  <tr>
    <td>
      <%= link_to "Vedi", house_page_path(house)  %>
    </td>
    <td><b><%= house.price %> &euro; | <%= house.total_sqm %> m<sup>2</sup> | <%= house.n_total_room %> locali | <%= house.TypeOfContract.name %> </b></td>
  
  </tr>
  <% end %>
  <tr>
    <td colspan="2" style="text-align: center;"><%= will_paginate @houses, :previous_label => "<< Indietro", :next_label => "Avanti >>" %></td>
  </tr>
</table>
<%end%>