<div class="content_center">
  <h1>Login Utente</h1>
  <%= form_for(:session, :url => sessions_path) do |f| %>  
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div> 
  <% end %>
  <%= link_to "Registrati qui", new_user_path %>
</div>